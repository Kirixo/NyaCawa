<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:background="@drawable/rounded_background"
    android:layout_height="145dp"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/_anime_poster"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/example"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/anime_poster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/example"
            >
        </ImageView>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/anime_name"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/_anime_poster"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/low_margin"
        android:layout_marginTop="@dimen/low_margin"
        android:text="@string/none"
        style="@style/TextAnime.T2"
        >
    </TextView>

    <TextView
        android:id="@+id/anime_type_episode"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/_anime_poster"
        app:layout_constraintTop_toBottomOf="@id/anime_name"
        android:layout_marginStart="@dimen/low_margin"
        android:layout_marginTop="@dimen/low_margin"
        android:text="@string/none"
        style="@style/TextAnime.T2"
        >
    </TextView>

    <ImageView
        android:id="@+id/_star"
        app:layout_constraintStart_toEndOf="@id/_anime_poster"
        app:layout_constraintTop_toBottomOf="@id/anime_type_episode"
        android:layout_marginTop="@dimen/low_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell_ico"
        android:layout_marginStart="@dimen/low_margin"
        >
    </ImageView>

    <TextView
        android:id="@+id/anime_rating"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/_star"
        app:layout_constraintTop_toTopOf="@id/_star"
        app:layout_constraintBottom_toBottomOf="@id/_star"
        android:layout_marginStart="@dimen/low_margin"
        android:text="@string/none"
        style="@style/TextAnime.T2"
        >
    </TextView>

</merge>